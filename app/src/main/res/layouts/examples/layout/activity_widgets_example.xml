<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simform.rushabhmodi.androidlearning.exampleactivities.WidgetsExampleActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_widget_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/widgets_title_header"
            android:textColor="@color/title_examples_header"
            android:textSize="@dimen/_33sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/widget_btn"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/togglebtn_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_widget_title_header"
            app:layout_constraintVertical_chainStyle="spread" />

        <ToggleButton
            android:id="@+id/togglebtn_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_widget" />

        <CheckBox
            android:id="@+id/checkbox_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_checkbox"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/radiogroup_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/togglebtn_widget" />

        <RadioGroup
            android:id="@+id/radiogroup_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/imagebtn_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_widget">

            <RadioButton
                android:id="@+id/radiobtn_widget_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_10sdp"
                android:text="@string/widget_radiobtn1" />

            <RadioButton
                android:id="@+id/radiobtn_widget_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_10sdp"
                android:text="@string/widget_radiobtn2" />

        </RadioGroup>

        <ImageButton
            android:id="@+id/imagebtn_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/spinner_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radiogroup_widget"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:contentDescription="@string/widget_imagebutton_contentdescription" />

        <Spinner
            android:id="@+id/spinner_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@+id/switch_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagebtn_widget" />

        <Switch
            android:id="@+id/switch_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_switch"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_widget" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
