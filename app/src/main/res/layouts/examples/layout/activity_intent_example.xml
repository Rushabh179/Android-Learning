<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simform.rushabhmodi.androidlearning.examples.IntentExampleActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_intent_title_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/intents_title_header"
            android:textColor="@color/title_examples_header"
            android:textSize="@dimen/_33sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_intent_explicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intent_title_explicit"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintBottom_toTopOf="@+id/btn_explicit_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_intent_title_header" />

        <Button
            android:id="@+id/btn_explicit_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/intent_btn_explicit"
            android:text="@string/intent_btn_explicit"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toTopOf="@+id/textview_intent_implicit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_intent_explicit" />

        <TextView
            android:id="@+id/textview_intent_implicit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intent_title_implicit"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintBottom_toTopOf="@+id/btn_implicit_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_explicit_intent" />

        <Button
            android:id="@+id/btn_implicit_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/intent_btn_implicit"
            android:text="@string/intent_btn_implicit"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toTopOf="@+id/textview_intent_explicit_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_intent_implicit" />

        <TextView
            android:id="@+id/textview_intent_explicit_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intent_title_explicit_data"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintBottom_toTopOf="@+id/edittext_name_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_implicit_intent" />

        <EditText
            android:id="@+id/edittext_name_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/intent_hint_explicit_data"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@+id/btn_explicit_data_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_intent_explicit_data" />

        <Button
            android:id="@+id/btn_explicit_data_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/intent_btn_explicit_data"
            android:text="@string/intent_btn_explicit_data"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toTopOf="@+id/textview_intent_implicit_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_name_intent" />

        <TextView
            android:id="@+id/textview_intent_implicit_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/intent_title_implicit_data"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintBottom_toTopOf="@+id/edittext_search_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_explicit_data_intent" />

        <EditText
            android:id="@+id/edittext_search_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/intent_hint_implicit_data"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@+id/btn_implicit_data_intent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_intent_implicit_data" />

        <Button
            android:id="@+id/btn_implicit_data_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/intent_btn_implicit_data"
            android:text="@string/intent_btn_implicit_data"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_search_intent" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>