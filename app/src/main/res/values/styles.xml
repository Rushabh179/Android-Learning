<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextInput Example -->
    <style name="TextInputExample.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputExample.CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="TextInputExample.CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="TextInputExample.ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>

</resources>
